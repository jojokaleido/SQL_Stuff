CREATE TABLE dbo.Customer
(CustomerID INTEGER IDENTITY PRIMARY KEY,
FirstName NVARCAR(20) NOT NULL,
MiddleName (20) NULL,
LastName NVARCHAR(20) NULL,
AcountOpened DATA DEFAULT GETDATE(),
CreditLimit DECIMAL(6.2) DEFAULT 1000.00);
